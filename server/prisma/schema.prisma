generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum LeadStatus {
  NIEUW
  VERSTUURD
  GEEN_REACTIE
  GEREAGEERD
  AFSPRAAK
  KLANT
  NIET_GEINTERESSEERD
}

enum BillingType {
  MONTHLY
  ONE_TIME
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  leads        Lead[]
  appointments Appointment[]
  googleToken  GoogleToken?
}

model Lead {
  id             String     @id @default(cuid())
  companyName    String
  vatNumber      String?
  city           String?
  address        String?
  website        String?
  phone          String?
  email          String?
  contactPerson  String?
  status         LeadStatus @default(NIEUW)
  source         String?
  notes          String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  createdBy      User       @relation(fields: [createdById], references: [id])
  createdById    String
  deal           Deal?
  appointments   Appointment[]
}

model Deal {
  id              String       @id @default(cuid())
  lead            Lead         @relation(fields: [leadId], references: [id], onDelete: Cascade)
  leadId          String       @unique
  package         Package      @relation(fields: [packageId], references: [id])
  packageId       String
  acquisitionCost Float        @default(0)
  saleDate        DateTime     @default(now())
  totalValue      Float        @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  upsells         DealUpsell[]
  client          Client?
  
  // Website requirements
  websiteGoal     String?
  targetAudience  String?
  hasExistingWebsite Boolean   @default(false)
  existingWebsiteUrl String?
  
  // Design & visual identity
  mood            String?
  heroType        String?
  toneOfVoice     String?
  referenceUrls   String?
  usps            String?
  primaryCta      String?
  
  // Strategy & content
  features        String?
  languages       String?
  contentStatus   String?
  urgency         String?
  specialRequests String?
  
  // Hosting
  hasHosting       Boolean   @default(true)
  hostingStartDate DateTime?
  hostingEndDate   DateTime?
  hostingPrice     Float     @default(20)
  hostingInterval  String    @default("MONTHLY")
  nextInvoiceDate  DateTime?
  
  // Acquisition
  acquisitionType  String    @default("manual")
}

model Client {
  id            String   @id @default(cuid())
  companyName   String
  vatNumber     String?
  contactPerson String?
  email         String?
  phone         String?
  address       String?
  city          String?
  website       String?
  notes         String?
  deal          Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId        String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model DealUpsell {
  id       String @id @default(cuid())
  deal     Deal   @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId   String
  upsell   Upsell @relation(fields: [upsellId], references: [id])
  upsellId String

  @@unique([dealId, upsellId])
}

model Package {
  id           String  @id @default(cuid())
  name         String
  oneTimePrice Float
  monthlyPrice Float   @default(20)
  isArchived   Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deals        Deal[]
}

model Upsell {
  id          String      @id @default(cuid())
  name        String
  price       Float
  billingType BillingType
  isArchived  Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deals       DealUpsell[]
}

model Appointment {
  id            String   @id @default(cuid())
  lead          Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  leadId        String
  title         String
  description   String?
  location      String?
  startTime     DateTime
  endTime       DateTime
  googleEventId String?
  reminderSent  Boolean  @default(false)
  createdBy     User     @relation(fields: [createdById], references: [id])
  createdById   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model GoogleToken {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  calendarId   String   @default("primary")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
